<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up_frag"
    android:orientation="vertical"
    android:id="@+id/sign_frag"
    >

    <EditText
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter your best email"
        android:id="@+id/email"
        android:textAlignment="center"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter your usename"
        android:layout_below="@id/email"
        android:id="@+id/un"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter your password"
        android:layout_below="@id/un"
        android:id="@+id/password"
        android:layout_marginTop="10dp"
        android:textAlignment="center"


        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please confirm your password"
        android:layout_below="@id/password"
        android:id="@+id/rpw"
        android:layout_marginTop="10dp"
        android:textAlignment="center"


        ></EditText>

    <Button
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign up"
        android:layout_below="@id/rpw"
        android:layout_marginTop="10dp"
        android:id="@+id/sumbitfargbtn"
        >

    </Button>

</RelativeLayout>