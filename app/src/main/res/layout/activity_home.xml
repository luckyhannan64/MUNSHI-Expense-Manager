<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home_activity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#6F0581">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calculator"
                android:id="@+id/img_accounts"
                android:layout_marginRight="10dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCOUNTS"
                android:textSize="20dp"
                android:textColor="#6F0581"
                android:id="@+id/text_accounts"
                android:layout_below="@+id/img_accounts"
                android:layout_marginLeft="23dp"
                ></TextView>

            <ImageButton
                android:layout_toRightOf="@+id/img_accounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expenses"
                android:id="@+id/img_expenses"
                android:layout_marginLeft="10dp"
                ></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPENSES"
                android:textSize="20dp"
                android:textColor="#6F0581"
                android:id="@+id/text_expenses"
                android:layout_toRightOf="@+id/text_accounts"
                android:layout_below="@+id/img_expenses"
                android:layout_marginLeft="57dp"
                ></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/budget"
                android:id="@+id/img_budget"
                android:layout_marginRight="10dp"
                ></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUDGET"
                android:textSize="20dp"
                android:textColor="#6F0581"
                android:id="@+id/txt_budget"
                android:layout_below="@+id/img_budget"
                android:layout_marginLeft="35dp"
                ></TextView>

            <ImageButton
                android:layout_toRightOf="@+id/img_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/balance"
                android:id="@+id/img_balance"
                android:layout_marginLeft="10dp"
                ></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BALANCE"
                android:textSize="20dp"
                android:textColor="#6F0581"
                android:id="@+id/txt_balance"
                android:layout_toRightOf="@+id/txt_budget"
                android:layout_below="@+id/img_balance"
                android:layout_marginLeft="75dp"
                ></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/transactions"
                android:layout_marginRight="10dp"
                android:id="@+id/img_transaction"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSACTION"
                android:textSize="20dp"
                android:textColor="#6F0581"
                android:id="@+id/txt_transaction"
                android:layout_below="@+id/img_transaction"
                android:layout_marginLeft="7dp"
                ></TextView>

            <ImageButton
                android:layout_toRightOf="@+id/img_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/charts"
                android:id="@+id/img_charts"
                android:layout_marginLeft="5dp"
                ></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHARTS"
                android:textSize="20dp"
                android:textColor="#6F0581"
                android:id="@+id/txtbtn6"
                android:layout_toRightOf="@id/txt_transaction"
                android:layout_below="@+id/img_charts"
                android:layout_marginLeft="50dp"
                ></TextView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>